@model QL_TrungTamAnhNgu.Models.view_baitap_theodangky

@{
    ViewBag.Title = "Chi tiết bài tập";
    Layout = "~/Views/Shared/_LayoutHocVien.cshtml";
}
<hr class="my-0">
<div class="bg-light py-1 shadow-sm border-bottom mt-0">
    <div class="container">
        <ul class="nav justify-content-center mb-0">
            <li class="nav-item">
                <a class="nav-link text-dark" href="@Url.Action("LopHoc", "HocVien", new { id = Session["MaLop"] })">Thông tin lớp học</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/BaiTap">Bài tập</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/TaiLieu">Tài liệu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/ChuyenCan">Chuyên cần</a>
            </li>
        </ul>
    </div>
</div>
<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 900px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0"><i class="fas fa-file-alt me-2"></i>Chi Tiết Bài Tập</h3>
        </div>
        <div class="card-body px-5">
            @if (ViewBag.ThongBao != null)
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ThongBao
                </div>
            }
            else
            {
                <!-- Tên bài tập -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-book-open me-2 text-primary"></i>
                        <strong>Tên Bài Tập:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span>@Model.TenBaiTap</span>
                    </div>
                </div>
                <!-- Mô tả -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-info-circle me-2 text-info"></i>
                        <strong>Mô Tả:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span>@Model.MoTa</span>
                    </div>
                </div>
                <!-- Điểm -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-star me-2 text-warning"></i>
                        <strong>Điểm:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span>@(Model.Diem)</span>
                    </div>
                </div>
                <!-- Trạng thái -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-info-circle me-2 text-secondary"></i>
                        <strong>Trạng Thái:</strong>
                    </div>
                    <div class="col-sm-8">
                        @if (Model.TrangThai == "Đã nộp")
                        {
                            <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i> Đã nộp</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary"><i class="fas fa-times-circle me-1"></i> Chưa nộp</span>
                        }
                    </div>
                </div>
                <!-- Ngày nộp -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-calendar-alt me-2 text-success"></i>
                        <strong>Ngày Nộp:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span>@(Model.NgayNop.HasValue ? Model.NgayNop.Value.ToString("dd/MM/yyyy") : "Không rõ")</span>
                    </div>
                </div>
                <!-- Ngày chấm -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-calendar-check me-2 text-success"></i>
                        <strong>Ngày Chấm:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span>@(Model.NgayCham.HasValue ? Model.NgayCham.Value.ToString("dd/MM/yyyy") : "Chưa chấm")</span>
                    </div>
                </div>
                <!-- File bài tập -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-file-download me-2 text-primary"></i>
                        <strong>Bài Tập:</strong>
                    </div>
                    <div class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.FileHocVien))
                        {
                            <a href="@Url.Action("NopBaiTap", "HocVien", new { maBaiTap = Model.MaBaiTap })" class="btn btn-warning btn-sm">
                                <i class="fas fa-upload me-1"></i>Nộp lại bài tập
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("NopBaiTap", "HocVien", new { maBaiTap = Model.MaBaiTap })" class="btn btn-primary btn-sm">
                                <i class="fas fa-upload me-1"></i>Nộp bài tập
                            </a>
                        }
                    </div>

                </div>
                <!-- Tên khóa học -->
                <div class="row mb-3">
                    <div class="col-sm-4 d-flex align-items-center">
                        <i class="fas fa-graduation-cap me-2 text-warning"></i>
                        <strong>Khóa Học:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span>@Model.TenKhoaHoc</span>
                    </div>
                </div>
                <div class="row mb-3">
                    @if (!string.IsNullOrEmpty(Model.FileUpload))
                    {
                        <iframe id="avatarPreview" src="@Url.Content("~/Content/HinhAnh/BaiTap/" + Model.FileUpload)" width="100%" height="600px" style="border: 1px solid #ddd;"></iframe>
                    }
                    else
                    {
                        <p class="text-muted">Không có tệp bài tập nào được tải lên.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>
