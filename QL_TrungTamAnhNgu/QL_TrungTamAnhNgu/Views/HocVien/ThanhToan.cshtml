@model IEnumerable<QL_TrungTamAnhNgu.Models.ThongTinThanhToan>

@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_LayoutHocVien.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">
        <i class="fas fa-money-bill-wave me-2"></i>Danh sách Thanh Toán
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mx-auto" style="max-width: 900px;">
            <table class="table table-bordered text-center">
                <thead class="table-success">
                    <tr>
                        <th><i class="fas fa-book me-2"></i>Khóa Học</th>
                        <th><i class="fas fa-dollar-sign me-2"></i>Số Tiền</th>
                        <th><i class="fas fa-percent me-2"></i>Tỉ lệ Giảm</th>
                        <th><i class="fas fa-money-check-alt me-2"></i>Tổng Tiền</th>
                        <th><i class="fas fa-calendar-alt me-2"></i>Ngày Thực Hiện</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="cursor: pointer;" data-image-url="/Content/HinhAnh/ThanhToan/@item.AnhHoaDon" onclick="showImageModal(this)">
                            <td>@item.TenKhoaHoc</td>
                            <td>@string.Format("{0:#,0} VNĐ", item.TongTien)</td>
                            <td>@(item.TiLeGiam.HasValue ? item.TiLeGiam.Value.ToString("0") : "0")%</td>
                            <td>@string.Format("{0:#,0} VNĐ", item.TongTienSauGiam)</td>
                            <td>@(item.NgayThucHien.HasValue ? item.NgayThucHien.Value.ToString("dd/MM/yyyy") : "Chưa có thông tin")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-circle me-2"></i>Không có dữ liệu thanh toán.
        </div>
    }
</div>
<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style=" height: 450px;">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Ảnh Hóa Đơn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <!-- Ảnh sẽ được hiển thị ở đây -->
                <img id="modalImage" src="" alt="Hóa Đơn" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<script>
    function showImageModal(row) {
        // Lấy URL của ảnh từ thuộc tính data
        var imageUrl = row.getAttribute("data-image-url");

        // Gán URL vào thẻ <img> trong Modal
        var modalImage = document.getElementById("modalImage");
        modalImage.src = imageUrl;

        // Hiển thị Modal
        var modal = new bootstrap.Modal(document.getElementById("imageModal"));
        modal.show();
    }
</script>
