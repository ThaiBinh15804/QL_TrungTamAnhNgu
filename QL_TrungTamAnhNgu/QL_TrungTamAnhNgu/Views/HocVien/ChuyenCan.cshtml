@model IEnumerable<QL_TrungTamAnhNgu.Models.view_dshocvien_diemdanh>

@{
    ViewBag.Title = "ChuyenCan";
    Layout = "~/Views/Shared/_LayoutHocVien.cshtml";
}

<hr class="my-0">
<div class="bg-light py-1 shadow-sm border-bottom mt-0">
    <div class="container">
        <ul class="nav justify-content-center mb-0">
            <li class="nav-item">
                <a class="nav-link text-dark" href="@Url.Action("LopHoc", "HocVien", new { id = Session["MaLop"] })">Thông tin lớp học</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/BaiTap">Bài tập</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/TaiLieu">Tài liệu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/ChuyenCan">Chuyên cần</a>
            </li>
        </ul>
    </div>
</div>

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">
        <i class="fas fa-user-check me-2"></i>Danh sách chuyên cần
    </h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-circle me-2"></i>Không có dữ liệu chuyên cần.
        </div>
    }
    else
    {
        <div class="table-responsive mx-auto" style="max-width: 600px;">
            <!-- Giảm kích thước tối đa -->
            <table class="table table-bordered text-center">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">
                            <i class="fas fa-calendar-alt me-2"></i>Lớp
                        </th>
                        <th scope="col">
                            <i class="fas fa-calendar-alt me-2"></i>Ngày điểm danh
                        </th>
                        <th scope="col">
                            <i class="fas fa-info-circle me-2"></i>Trạng thái
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenLop</td>
                            <td>@item.NgayDiemDanh.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.TrangThai == "Có mặt")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>Có mặt
                                    </span>
                                }
                                else if (item.TrangThai == "Vắng")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle me-1"></i>Vắng
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

