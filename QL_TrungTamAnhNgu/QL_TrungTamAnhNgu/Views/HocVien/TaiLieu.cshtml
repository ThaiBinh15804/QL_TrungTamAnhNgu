@model List<QL_TrungTamAnhNgu.Models.view_tailieu_theokhoahoc>
@using System.Globalization

@{
    ViewBag.Title = "Tài liệu";
    Layout = "~/Views/Shared/_LayoutHocVien.cshtml";
}

<hr class="my-0">
<div class="bg-light py-1 shadow-sm border-bottom mt-0">
    <div class="container">
        <ul class="nav justify-content-center mb-0">
            <li class="nav-item">
                <a class="nav-link text-dark" href="@Url.Action("LopHoc", "HocVien", new { id = Session["MaLop"] })">Thông tin lớp học</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/BaiTap">Bài tập</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/TaiLieu">Tài liệu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/HocVien/ChuyenCan">Chuyên cần</a>
            </li>
        </ul>
    </div>
</div>
<div class="container mt-4">
    <h3 class="text-primary text-center mb-4">Danh sách Tài liệu</h3>

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-warning text-center">@ViewBag.ThongBao</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <!-- Tên khóa học -->
                            <h5 class="card-title text-primary">@item.TenKhoaHoc</h5>

                            <!-- Tên tài liệu -->
                            <p class="card-text">
                                <strong>Tài liệu:</strong> @item.TenTaiLieu
                            </p>

                            <!-- Xem chi tiết -->
                            <a href="@Url.Action("ChiTietTaiLieu", "HocVien", new { maTaiLieu = item.MaTaiLieu })"
                               class="btn btn-outline-primary btn-sm mt-2">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
