@model QL_TrungTamAnhNgu.Models.LopHoc
@using QL_TrungTamAnhNgu.Models
@{
    ViewBag.Title = "ThemLopHoc";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}
<div>
    <header style="position: sticky; left:0 ; top: 0; background-color: #fff; display: flex; align-items: center; justify-content: space-between; padding: 0px 16px; border-bottom: 1px solid #edede9; height: 80px;">
        <div style="display: flex; align-items: center; column-gap: 8px;">
            <i class="fa-solid fa-bars" style="color: black; font-size: 20px;"></i>
            <h2 style="font-size: 18px; color: #000; font-weight: 500;">Quản lý Trung tâm Anh ngữ Yola</h2>
        </div>
        <div style="position: relative">
            <button onclick="handleClickUser(event)" style="display: flex; align-items: center; column-gap: 4px; color: #000">
                <span style="font-size: 16px; font-weight: 500; color: #000">
                    Xin chào,
                    @if (Session["user"] != null)
                    {
                        NguoiDung user = Session["user"] as NguoiDung;
                        <span>@user.TenTaiKhoan</span>
                    }
                </span>
                <img src="~/Content/HinhAnh/GiaoDien/avatar.jpg" alt="Alternate Text" style="width: 30px; height: 30px; border-radius: 999px;" />
            </button>
            <div style="position: absolute; right: 0; top: 25px;" class="user">
                <div class="d-flex flex-column mt-3 user__body">
                    <a class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; display: block; text-align: center; font-size: 15px;">Thông tin tài khoản</a>
                    <a href="/QuanTriVien/DangXuat" class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; border-top: 0px; display: block; text-align: center; font-size: 15px;">Đăng xuất</a>
                </div>
            </div>
        </div>
    </header>
    <div style="padding:8px 20px;">
        <div class="d-flex gap-2 mt-2">
            <i style="color: #343a40" class="fa-solid fa-house"></i>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #343a40">Danh sách lớp học</span>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #000; ">Thêm lớp học</span>
        </div>
        <div class="d-flex justify-content-between">
            <h1 style="font-size: 22px; font-weight: 600; color: #000; margin-top: 20px; display: block">Thêm lớp học</h1>
        </div>
        <div style=" margin-top: 10px; padding: 16px; background: #fff; border: 1px solid #dadada; border-radius: 10px;">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            <form method="post" action="/QuanTriVien/ThemLopHoc">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="TenLop">Tên Lớp:</label>
                            <input type="text" class="mt-2 form-control" id="TenLop" name="TenLop" required placeholder="Nhập tên lớp học">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MaGiangVien">Mã Giảng Viên:</label>
                            <input type="text" class="mt-2 form-control" id="MaGiangVien" name="MaGiangVien" required placeholder="Nhập mã giảng viên">
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MaKhoaHoc">Khóa Học:</label>
                            <input type="text" class="mt-2 form-control" id="MaKhoaHoc" name="MaKhoaHoc" readonly value="@ViewBag.Makhoahoc">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MaPhong">Phòng Học:</label>
                            <select class="mt-2 form-control" id="MaPhong" name="MaPhong" required>
                                <option value="">-- Chọn Phòng Học --</option>
                                @foreach (var ph in ViewBag.MaPhong)
                                {
                                    <option value="@ph.MaPhong">@ph.MaPhong - @ph.TenPhong</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="NgayBatDau">Ngày Bắt Đầu:</label>
                            <input type="date" class="mt-2 form-control" id="NgayBatDau" name="NgayBatDau" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="NgayKetThuc">Ngày Kết Thúc:</label>
                            <input type="date" class="mt-2 form-control" id="NgayKetThuc" name="NgayKetThuc" required>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SoLuongToiThieu">Số Lượng Tối Thiểu:</label>
                            <input type="number" class="mt-2 form-control" id="SoLuongToiThieu" name="SoLuongToiThieu" required placeholder="Nhập số lượng tối thiểu">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SoLuongToiDa">Số Lượng Tối Đa:</label>
                            <input type="number" class="mt-2 form-control" id="SoLuongToiDa" name="SoLuongToiDa" required placeholder="Nhập số lượng tối đa">
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="ThoiLuong">Thời Lượng:</label>
                            <input type="number" class="mt-2 form-control" id="ThoiLuong" name="ThoiLuong" required placeholder="Nhập thời lượng">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="mt-2 btn btn-success" style="margin-top: 20px; padding: 10px 20px; font-size: 16px;">Thêm Lớp</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
