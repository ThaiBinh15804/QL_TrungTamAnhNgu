@model IEnumerable<QL_TrungTamAnhNgu.Models.LichHoc>


<div class="container mt-4">
    <table class="table table-bordered table-hover shadow-sm mt-3">
        <thead class="table-light">
            <tr>
                <th>Ngày Học</th>
                <th>Thời Gian Bắt Đầu</th>
                <th>Thời Gian Kết Thúc</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NgayHoc.ToString("dd/MM/yyyy")</td>
                    <td>@item.ThoiGianBatDau</td>
                    <td>@item.ThoiGianKetThuc</td>
                </tr>
            }
        </tbody>
    </table>
    <div style="display: flex; justify-content: flex-end">
        <button class="btn btn-primary">Thêm lịch học</button>
    </div>
</div>

<style>
    .table th, .table td {
        text-align: center;
        padding: 12px;
    }

    .table th {
        background-color: #f8f9fa;
        color: #495057;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .container {
        max-width: 1200px;
    }


    .text-muted {
        font-size: 14px;
        color: #6c757d;
    }
</style>
