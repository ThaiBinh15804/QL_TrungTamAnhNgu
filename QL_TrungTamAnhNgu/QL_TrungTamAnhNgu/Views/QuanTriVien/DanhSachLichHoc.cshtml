@model IEnumerable<QL_TrungTamAnhNgu.Models.LichHoc>


<div class="mt-4">
    <table class="table table-bordered table-hover shadow-sm mt-3">
        <thead class="table-light">
            <tr>
                <th>Ngày Học</th>
                <th>Thời Gian Bắt Đầu</th>
                <th>Thời Gian Kết Thúc</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NgayHoc.ToString("dd/MM/yyyy")</td>
                    <td>@item.ThoiGianBatDau</td>
                    <td>@item.ThoiGianKetThuc</td>
                    <td class="d-flex justify-content-center gap-2">
                        <a href="/QuanTriVien/ChiTietLichHoc?maLH=@item.MaLichHoc" style="width: 30px; height: 30px; background-color: #00bbf9; border-radius: 5px; display: flex; justify-content: center; align-items: center; ">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" style="height: 20px; width: 20px;">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                            </svg>
                        </a>
                        <a href="/QuanTriVien/XoaLichHoc?maLH=@item.MaLichHoc&malop=@ViewBag.MaLop" style="width: 30px; height: 30px; background-color: #ff0000; border-radius: 5px; display: flex; justify-content: center; align-items: center; ">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" style="height: 20px; width: 20px;">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="margin-top: 16px; display: flex; justify-content: space-between">
        <div style="width: 900px;">
            @if (TempData["ErrorMessageLichHoc"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessageLichHoc"]
                </div>
            }
        </div>
        <a href="/QuanTriVien/XuLyDieuHuong/?malop=@ViewBag.MaLop&page=ThemLichHoc" class="btn btn-primary" style="height:40px;">Thêm lịch học</a>
    </div>
</div>

<style>
    .table th, .table td {
        text-align: center;
        padding: 12px;
    }

    .table th {
        background-color: #f8f9fa;
        color: #495057;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .container {
        max-width: 1200px;
    }


    .text-muted {
        font-size: 14px;
        color: #6c757d;
    }
</style>
