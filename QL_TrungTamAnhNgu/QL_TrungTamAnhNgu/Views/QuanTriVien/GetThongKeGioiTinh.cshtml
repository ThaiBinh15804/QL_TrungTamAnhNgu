@model List<QL_TrungTamAnhNgu.Models.ThongKeGioiTinh>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@if (Model != null && Model.Any())
{
    <div style="background-color: white;">
        <h1 style="font-size: 16px; font-weight: 500;" class="p-3">Biểu Đồ Thống Kê Giới tính Học viên</h1>
        <div style="max-width: 100%; width: 100%; height: 350px;" class="d-flex justify-content-center">
            <canvas style="width: 100%; height: 100%;" id="ageChart1"></canvas>
        </div>
        <script>
            // Kiểm tra dữ liệu có hợp lệ không
            var data = @Html.Raw(ViewBag.GioiTinh);
            console.log(data); // In ra console để kiểm tra

            // Tạo mảng cho labels và dữ liệu
            var labels = [];
            var dataValues = [];

            // Lấy dữ liệu từ đối tượng và đưa vào mảng labels và dataValues
            data.forEach(function(item) {
                labels.push(item.GioiTinh);  // Chắc chắn rằng Tuoi là tên thuộc tính trong Model
                dataValues.push(item.SoLuong);  // Chắc chắn rằng SoLuong là tên thuộc tính trong Model
            });

            // Tạo biểu đồ pie sử dụng Chart.js
            var ctx = document.getElementById('ageChart1').getContext('2d');
            var ageChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels, // Các nhãn (tuổi)
                    datasets: [{
                        label: 'Số Lượng Học Viên Theo Tuổi',
                        data: dataValues, // Dữ liệu (số lượng)
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(tooltipItem) {
                                    return tooltipItem.label + ': ' + tooltipItem.raw + ' học viên';
                                }
                            }
                        }
                    }
                }
            });
        </script>
    </div>
}