@model QL_TrungTamAnhNgu.Models.LopHoc

<div class="my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h3>Thông Tin Lớp Học</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-chalkboard-teacher me-2 text-primary"></i> <strong>Tên lớp:</strong>
                </div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.TenLop)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-book me-2 text-info"></i> <strong>Khóa học:</strong>
                </div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.KhoaHoc.TenKhoaHoc)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-school me-2 text-warning"></i> <strong>Phòng học:</strong>
                </div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.PhongHoc.TenPhong)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-calendar-alt me-2 text-success"></i> <strong>Ngày bắt đầu:</strong>
                </div>
                <div class="col-sm-8">@Model.NgayBatDau.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-calendar-check me-2 text-danger"></i> <strong>Ngày kết thúc:</strong>
                </div>
                <div class="col-sm-8">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-info-circle me-2 text-secondary"></i> <strong>Trạng thái:</strong>
                </div>
                <div class="col-sm-8">
                    <span class="badge @(Model.TrangThai == "Đang hoạt động" ? "bg-success" : "bg-secondary")">
                        @Html.DisplayFor(model => model.TrangThai)
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-users me-2 text-dark"></i> <strong>Số lượng học viên tối đa:</strong>
                </div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.SoLuongToiDa)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-user-minus me-2 text-muted"></i> <strong>Số lượng học viên tối thiểu:</strong>
                </div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.SoLuongToiThieu)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-user-check me-2 text-primary"></i> <strong>Số lượng học viên hiện tại:</strong>
                </div>
                <div class="col-sm-8">@ViewBag.SlgHVHT</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 d-flex align-items-center">
                    <i class="fas fa-clock me-2 text-secondary"></i> <strong>Số tiết học:</strong>
                </div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.ThoiLuong) giờ</div>
            </div>
        </div>

    </div>
</div>

<p></p>
