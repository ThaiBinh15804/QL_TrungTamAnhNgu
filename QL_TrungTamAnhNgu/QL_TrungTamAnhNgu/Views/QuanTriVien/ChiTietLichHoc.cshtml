@model QL_TrungTamAnhNgu.Models.LichHoc
@using QL_TrungTamAnhNgu.Models
@{
    ViewBag.Title = "ChiTietLichHoc";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

<div>
    <header style="position: sticky; left:0 ; top: 0; z-index: 10; background-color: #fff; display: flex; align-items: center; justify-content: space-between; padding: 0px 16px; border-bottom: 1px solid #edede9; height: 80px;">
        <div style="display: flex; align-items: center; column-gap: 8px;">
            <i class="fa-solid fa-bars" style="color: black; font-size: 20px;"></i>
            <h2 style="font-size: 18px; color: #000; font-weight: 500;">Quản lý Trung tâm Anh ngữ Yola</h2>
        </div>
        <div style="position: relative">
            <button onclick="handleClickUser(event)" style="display: flex; align-items: center; column-gap: 4px; color: #000">
                <span style="font-size: 16px; font-weight: 500; color: #000">
                    Xin chào,
                    @if (Session["user"] != null)
                    {
                        NguoiDung user = Session["user"] as NguoiDung;
                        <span>@user.TenTaiKhoan</span>
                    }
                </span>
                <img src="~/Content/HinhAnh/GiaoDien/avatar.jpg" alt="Alternate Text" style="width: 30px; height: 30px; border-radius: 999px;" />
            </button>
            <div style="position: absolute; right: 0; top: 25px;" class="user">
                <div class="d-flex flex-column mt-3 user__body">
                    <a class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; display: block; text-align: center; font-size: 15px;">Thông tin tài khoản</a>
                    <a href="/QuanTriVien/DangXuat" class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; border-top: 0px; display: block; text-align: center; font-size: 15px;">Đăng xuất</a>
                </div>
            </div>
        </div>
    </header>

    <div style="padding:8px 20px;">
        <div class="d-flex gap-2 mt-2">
            <i style="color: #343a40" class="fa-solid fa-house"></i>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #343a40">Danh sách lớp học</span>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #000; ">Chi tiết</span>
        </div>
        <div class="d-flex mt-3 p-2" style="background-color: #dadada; color: #000">
            <a style="color: black;" href="/QuanTriVien/XuLyDieuHuong/?malop=@Model.MaLop&page=ThongTinLopHoc">Thông tin lớp học</a>
            <a style="color: black; margin-left: 25px;" href="/QuanTriVien/XuLyDieuHuong/?malop=@Model.MaLop&page=HocVienLopHoc">Học viên</a>
            <a style="color: black; margin-left: 25px;" href="/QuanTriVien/XuLyDieuHuong/?malop=@Model.MaLop&page=DiemDanh">Điểm danh</a>
            <a style="color: black; margin-left: 25px;" href="/QuanTriVien/XuLyDieuHuong/?malop=@Model.MaLop&page=DanhSachLichHoc">Lịch học</a>
            <span style="margin-left: 25px;">Bài tập</span>
        </div>
        <div>
            <form method="post" action="/QuanTriVien/ChiTietLichHoc" class="mt-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MaLop">Mã lớp:</label>
                            <input type="text" class="mt-2 form-control" id="MaLop" name="MaLop" readonly value="@Model.MaLop">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MaGiangVien">Ngày học:</label>
                            @Html.TextBoxFor(model => model.NgayHoc, new
                            {
                                @readonly = "readonly",
                                @type = "date",
                                @id = "NgayHoc",
                                @class = "form-control mt-2",
                                Value = Model.NgayHoc.ToString("yyyy-MM-dd")
                            })
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ThoiGianBatDau">Thời gian bắt Đầu:</label>
                            <input readonly value="@Model.ThoiGianBatDau" type="time" class="mt-2 form-control" id="ThoiGianBatDau" name="ThoiGianBatDau" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ThoiGianKetThuc">Thời gian kết Thúc:</label>
                            <input readonly value="@Model.ThoiGianKetThuc" type="time" class="mt-2 form-control" id="ThoiGianKetThuc" name="ThoiGianKetThuc" required>
                        </div>
                    </div>
                </div>
                <div style="width: 100%" class="mt-3 d-flex justify-content-end gap-2">
                    <button id="btnSua" type="button" class="btn btn-primary">Sửa</button>
                    <button id="btnLuu" type="submit" disabled class="btn btn-success">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
