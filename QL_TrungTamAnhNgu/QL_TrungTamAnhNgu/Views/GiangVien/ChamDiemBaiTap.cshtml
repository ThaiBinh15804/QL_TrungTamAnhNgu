@model QL_TrungTamAnhNgu.Models.DangKy_BaiTap

@{
    ViewBag.Title = "Chấm Điểm Bài Tập";
    Layout = "~/Views/Shared/_LayoutGiangVien.cshtml";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Chấm Điểm Bài Tập</h2>
    <hr />
    <div class="row my-4">
        <div class="col-md-4">
            <h5><strong>Tên học viên:</strong></h5>
            <p>@Model.DangKy.ThanhToan.HocVien.HoTen</p>
        </div>
        <div class="col-md-4">
            <h5><strong>Tên bài tập:</strong></h5>
            <p>@Model.BaiTap.TenBaiTap</p>
        </div>
        <div class="col-md-4">
            <h5><strong>Ngày nộp:</strong></h5>
            <p>@Model.NgayNop</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h5><strong>Tệp bài tập:</strong></h5>
            @if (!string.IsNullOrEmpty(Model.FileUpload))
            {
                <iframe src="@Url.Content("~/Content/HinhAnh/DangKy_BaiTap/" + Model.FileUpload)" width="100%" height="600px" style="border: 1px solid #ddd;"></iframe>
            }

            else
            {
                <p class="text-muted">Không có tệp bài tập nào được tải lên.</p>
            }
        </div>
    </div>

    @using (Html.BeginForm("XuLyChamDiemBaiTap", "GiangVien", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.MaDangKy)
        @Html.HiddenFor(model => model.MaBaiTap)

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Diem" class="form-label"><strong>Điểm:</strong></label>
                @Html.EditorFor(model => model.Diem, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập điểm" } })
                @Html.ValidationMessageFor(model => model.Diem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-check me-2"></i>Lưu kết quả
            </button>
            <a href="javascript:history.back()" class="btn btn-secondary ms-2">
                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    }
</div>

