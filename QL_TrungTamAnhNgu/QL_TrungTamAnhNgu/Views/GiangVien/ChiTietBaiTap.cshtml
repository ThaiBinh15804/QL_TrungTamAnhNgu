@model QL_TrungTamAnhNgu.Models.BaiTap

@{
    ViewBag.Title = "Chi Tiết Bài Tập";
    Layout = "~/Views/Shared/_LayoutGiangVien.cshtml";
}

<div class="container my-4">
    <h2 class="text-center mb-4"><strong>@Model.TenBaiTap</strong></h2>
    <hr />

    <a href="javascript:history.back()" class="btn btn-secondary my-3">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
    </a>

    <div class="row mb-4">
        <!-- Mô tả -->
        <div class="col-12">
            <h5><strong>Mô tả:</strong></h5>
            <p class="text-muted">@Model.MoTa</p>
        </div>
    </div>

    <div class="row my-4">
        <!-- Ngày tạo -->
        <div class="col-md-6">
            <h5><strong>Ngày tạo:</strong></h5>
            <p>@DateTime.Parse(Model.NgayTao.ToString()).ToString("dd/MM/yyyy")</p>
        </div>

        <!-- Trạng thái -->
        <div class="col-md-6">
            <h5><strong>Trạng thái:</strong></h5>
            <p>
                <span class="badge @(Model.TrangThai == "Đang hoạt động" ? "bg-success" : "bg-secondary")">
                    @Model.TrangThai
                </span>
            </p>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Tệp bài tập -->
        <div class="col-12">
            <h5><strong>Tệp bài tập:</strong></h5>
            @if (!string.IsNullOrEmpty(Model.FileUpload))
            {
                <iframe src="@Url.Content("~/Content/HinhAnh/BaiTap/" + Model.FileUpload)" width="100%" height="600px" style="border: 1px solid #ddd;"></iframe>
                <div class="mt-2">
                    <a href="@Url.Content("~/Content/HinhAnh/BaiTap/" + Model.FileUpload)" target="_blank" class="btn btn-info">
                        <i class="fa-solid fa-download me-2"></i>Tải xuống
                    </a>
                </div>
            }
            else
            {
                <p class="text-muted">Không có tệp bài tập nào được tải lên.</p>
            }
        </div>
    </div>

</div>
