@model IEnumerable<QL_TrungTamAnhNgu.Models.LichHoc>

@{
    ViewBag.Title = "LichGiangDay";
    Layout = "~/Views/Shared/_LayoutGiangVien.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Lịch Giảng Dạy Sắp Tới Của Bạn</h2>
    <p class="text-muted text-center mb-4">Dưới đây là thông tin về lịch giảng dạy các lớp học mà bạn phụ trách.</p>

    <table class="table table-bordered table-hover shadow-sm mt-3">
        <thead class="table-light">
            <tr>
                <th>Lớp Học</th>
                <th>Ngày Học</th>
                <th>Thời Gian Bắt Đầu</th>
                <th>Thời Gian Kết Thúc</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.LopHoc.TenLop)</td>
                    <td>@item.NgayHoc.ToString("dd/MM/yyyy")</td>
                    <td>@item.ThoiGianBatDau</td>
                    <td>@item.ThoiGianKetThuc</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table th, .table td {
        text-align: center;
        padding: 12px;
    }

    .table th {
        background-color: #f8f9fa;
        color: #495057;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .container {
        max-width: 1200px;
    }

    h2 {
        color: #4CAF50;
        font-size: 24px;
    }

    .text-muted {
        font-size: 14px;
        color: #6c757d;
    }
</style>
