@model IEnumerable<QL_TrungTamAnhNgu.Models.BaiTap>

@{
    ViewBag.Title = "BaiTap";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh Sách Bài Tập</h2>
    <p class="text-muted text-center">Nhấp vào một bài tập để xem chi tiết.</p>

    <table class="table table-bordered table-hover shadow-sm mt-3">
        <thead class="table-light">
            <tr>
                <th>Tên Bài Tập</th>
                <th>Ngày Tạo</th>
                <th>Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr onclick="window.location='@Url.Action("ChiTietBaiTap", "GiangVien", new { mabaitap = item.MaBaiTap })';" style="cursor: pointer;">
                        <!-- Tên bài tập với liên kết -->
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.TenBaiTap)</strong>
                        </td>

                        <!-- Ngày tạo -->
                        <td>@DateTime.Parse(item.NgayTao.ToString()).ToString("dd/MM/yyyy")</td>

                        <!-- Trạng thái -->
                        <td>
                            <span class="badge @(item.TrangThai == "Đang hoạt động" ? "bg-success" : "bg-secondary")">
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </span>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Hiện không có bài tập nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
