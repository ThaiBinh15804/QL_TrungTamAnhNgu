@model QL_TrungTamAnhNgu.Models.GiangVien

@{
    ViewBag.Title = "Thông Tin Giảng Viên";
    Layout = "~/Views/Shared/_LayoutGiangVien.cshtml";
}

<div class="container my-4">
    <form action="/GiangVien/SuaThongTinNguoiDung" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Cột bên trái: Hình đại diện và tên giảng viên -->
            <div class="col-md-3 text-center">
                <div class="card shadow-sm p-3 mb-4">
                    <div class="d-flex flex-column align-items-center">
                        <img id="previewImage" src="@(string.IsNullOrEmpty(Model.NguoiDung.AnhDaiDien)
                             ? Url.Content("~/Content/HinhAnh/Avatar/user.png")
                             : Url.Content("~/Content/HinhAnh/Avatar/" + Model.NguoiDung.AnhDaiDien))"
                             class="rounded-circle mb-3" width="100" height="100" alt="Avatar" />
                        <h4 class="mt-2 mb-3 d-flex justify-content-center">
                            <input type="text" class="form-control" name="hoten" value="@Model.HoTen" />
                        </h4>
                        <button type="button" class="btn btn-outline-secondary btn-sm"
                                onclick="document.getElementById('imageUpload').click();">
                            Thay đổi ảnh
                        </button>
                        <input type="file" id="imageUpload" name="anh"
                               onchange="previewNewImage(event)" class="d-none" accept="image/*" />
                    </div>
                </div>
            </div>

            <!-- Cột bên phải: Thông tin chi tiết -->
            <div class="col-md-9">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Thông Tin Giảng Viên</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label><strong>Giới tính:</strong></label>
                                <input type="text" name="gioitinh" readonly class="form-control" value="@Model.GioiTinh" />
                            </div>
                            <div class="col-md-6">
                                <label><strong>Ngày sinh:</strong></label>
                                <input type="date" name="ngaysinh" readonly class="form-control" value="@Model.NgaySinh" />
                            </div>
                            <div class="col-md-6 mt-3">
                                <label><strong>Chuyên ngành:</strong></label>
                                <input type="text" name="chuyennganh" readonly class="form-control" value="@Model.ChuyenMon" />
                            </div>
                            <div class="col-md-6 mt-3">
                                <label><strong>Số điện thoại:</strong></label>
                                <input type="text" name="sdt" class="form-control" value="@Model.SoDienThoai" />
                            </div>
                            <div class="col-md-6 mt-3">
                                <label><strong>Địa chỉ:</strong></label>
                                <input type="text" name="diachi" class="form-control" readonly value="@Model.DiaChi" />
                            </div>
                            <div class="col-md-6 mt-3">
                                <label><strong>Email:</strong></label>
                                <input type="email" name="email" class="form-control" value="@Model.Email" />
                            </div>
                            <div class="col-md-6 mt-3">
                                <label><strong>Ngày vào làm: </strong></label>
                                <input type="date" name="ngayvaolam" readonly class="form-control" value="@Model.NgayVaoLam" />
                            </div>
                            <div class="col-md-6 mt-3">
                                <label><strong>Mức lương: </strong></label>
                                <input type="text" name="mucluong" readonly class="form-control" value="@Model.MucLuong" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function previewNewImage(event) {
        const imagePreview = document.getElementById('previewImage');
        const file = event.target.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block'; // Hiện ảnh preview
            }
            reader.readAsDataURL(file);
        } else {
            // Nếu không có file thì ẩn ảnh preview
            imagePreview.src = '';
            imagePreview.style.display = 'none';
        }
    }
</script>
