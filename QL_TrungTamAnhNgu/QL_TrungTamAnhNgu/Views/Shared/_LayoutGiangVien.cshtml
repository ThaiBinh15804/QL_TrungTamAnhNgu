@using QL_TrungTamAnhNgu.Models;


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap-5.0.2-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://vjs.zencdn.net/7.14.3/video-js.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2024.1.119/styles/kendo.default-v2.min.css" rel="stylesheet" />
    <script src="https://kendo.cdn.telerik.com/2024.1.119/js/kendo.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap-5.0.2-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/tinymce/js/tinymce/tinymce.min.js"></script>

</head>
<body>
    <div class="container-fluid m-0 p-0">
        <div class="row m-0 p-0">
            <div class="col-2 text-center m-0 p-0">
                <a href="/GiangVien/Index">
                    <img width="125" height="150" class="img-fluid" src="~/Content/HinhAnh/GiaoDien/yola-english-high-resolution-logo.png" alt="Logo" />
                </a>
            </div>
            <div class="col-10 d-flex align-items-center m-0 p-0">
                <form class="d-flex mx-auto input-group w-50" action="/GiangVien/TimKiem" method="post">
                    <input class="form-control" type="search" placeholder="Search" name="TenLop" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                @if (Session["user"] != null)
                {
                    var user = Session["user"] as GiangVien;
                    <div class="dropdown mx-3" id="userDropdown">
                        <a class="d-flex align-items-center text-decoration-none" href="#" 
                           id="userDropdownToggle">
                            <img width="24" height="24" src="~/Content/HinhAnh/GiaoDien/user.png" class="me-2" alt="User Avatar" />
                            <span>@user.HoTen</span>
                        </a>
                        <ul class="dropdown-menu" id="dropdownMenu">
                            <li><a class="dropdown-item" href="/GiangVien/ThongTinNguoiDung">Thông tin cá nhân</a></li>
                            <li><a class="dropdown-item text-danger" href="/GiangVien/DangXuat">Đăng xuất</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-dark" href="/GiangVien/DangNhap">Đăng nhập</a>
                }
            </div>

        </div>
        <div class="row m-0 p-0">
            <div class="col-12 m-0 p-0">
                <nav class="navbar navbar-expand navbar-dark bg-dark">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mb-lg-0" style="font-size:16px; font-weight:bold">
                                <li class="nav-item mx-2">
                                    <a class="nav-link active" href="/GiangVien/Index">Trang chủ</a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a class="nav-link active" href="/GiangVien/LopHocCuaToi">Lớp học của tôi</a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a class="nav-link active" href="/GiangVien/LichGiangDay">Lịch giảng dạy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="row m-0 p-0">
            <div class="col-12 m-0 p-0" style="width:100%; min-height: 400px">
                @RenderBody()
            </div>
        </div>
        <div class="row m-0 p-0">
            <div class="col-12 m-0 p-0">
                <footer class="text-center" style="background-color: rgba(0, 0, 0, 0.05);">
                    <div class="py-3 align-items-center">
                        <a class="btn mx-2 p-0" href="#" aria-label="facebook">
                            <img width="28" height="28" src="~/Content/HinhAnh/GiaoDien/fb.jpg" alt="facebook" />
                        </a>
                        <a class="btn mx-2 p-0" href="#" aria-label="LinkedIn">
                            <img width="28" height="28" src="~/Content/HinhAnh/GiaoDien/linkedin.jpg" alt="LinkedIn" />
                        </a>
                        <a class="btn mx-2 p-0" href="#" aria-label="youtube">
                            <img width="28" height="28" src="~/Content/HinhAnh/GiaoDien/youtube.jpg" alt="youtube" />
                        </a>
                        <a class="btn mx-2 p-0" href="#" aria-label="github">
                            <img width="28" height="28" src="~/Content/HinhAnh/GiaoDien/github.png" alt="github" />
                        </a>
                        <a class="btn mx-2 p-0" href="#" aria-label="twitter">
                            <img width="28" height="28" src="~/Content/HinhAnh/GiaoDien/twitter.png" alt="twitter" />
                        </a>
                    </div>
                    <div class="text-center p-3">
                        © 2024 Copyright Hệ Cơ sở dữ liệu:
                        <a class="text-body" style="text-decoration:none;" href="#">Bình - Khánh - Thuận</a>
                    </div>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const dropdownToggle = document.getElementById('userDropdownToggle');
        const dropdownMenu = document.getElementById('dropdownMenu');

        // Toggle the visibility of the dropdown menu
        dropdownToggle.addEventListener('click', function (e) {
            e.preventDefault(); // Prevent default action of anchor
            dropdownMenu.classList.toggle('show');
        });

        // Hide the dropdown menu when clicking outside
        document.addEventListener('click', function (e) {
            if (!dropdownToggle.contains(e.target) && !dropdownMenu.contains(e.target)) {
                dropdownMenu.classList.remove('show');
            }
        });
    });
</script>


<style>
    #dropdownMenu {
        display: none;
        position: absolute;
        top: 32px;
        right: 0;
        background: white;
        border: 1px solid #ccc;
        border-radius: 0.25rem;
        z-index: 1000;
    }

        #dropdownMenu.show {
            display: block;
        }
</style>
